# AWS Configuration
# Your AWS region where Bedrock is available
AWS_REGION=us-east-1

# AWS credentials (alternatively use AWS CLI, IAM roles, or instance profiles)
# AWS_ACCESS_KEY_ID=your_access_key_here
# AWS_SECRET_ACCESS_KEY=your_secret_key_here

# Pinecone Configuration
# Get these from your Pinecone dashboard at https://app.pinecone.io/
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=us-east-1-aws
PINECONE_INDEX_NAME=rag-documents

# Model Configuration
# AWS Bedrock model IDs - ensure these models are enabled in your AWS account
BEDROCK_EMBED_MODEL_ID=amazon.titan-embed-text-v1
BEDROCK_LLM_MODEL_ID=anthropic.claude-3-sonnet-20240229-v1:0

# RAG Parameters
# Number of document chunks to retrieve for each query
TOP_K=5

# Minimum similarity score threshold (0.0 to 1.0)
SIMILARITY_THRESHOLD=0.7

# LLM Generation Parameters
MAX_TOKENS=1000
TEMPERATURE=0.1

# Text Processing
# Maximum characters per document chunk
CHUNK_SIZE=1000

# Overlap between chunks in characters
CHUNK_OVERLAP=200

# API Configuration
API_TITLE=RAG Document Query API
API_DESCRIPTION=Retrieval-Augmented Generation API for document querying using AWS Bedrock and Pinecone
API_VERSION=1.0.0

# Development Settings
# Set to true for development (auto-reload on code changes)
RELOAD=false

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Optional: S3 Configuration for document ingestion
# S3_BUCKET_NAME=your-documents-bucket
# S3_PREFIX=documents/

# Optional: Custom endpoint URLs (for testing or different regions)
# BEDROCK_ENDPOINT_URL=https://bedrock-runtime.us-east-1.amazonaws.com
# PINECONE_ENDPOINT_URL=https://your-index-name.svc.us-east-1-aws.pinecone.io 